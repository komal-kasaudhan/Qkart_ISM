<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A3C5A"> <View
    android:id="@+id/topHeader"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@drawable/splash_circle_bg"
    app:layout_constraintHeight_percent="0.32"
    app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/logoCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/topHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topHeader"
        app:layout_constraintVertical_bias="0.6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/in_image" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoCard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="#FFC107"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your account"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <EditText
            android:id="@+id/etLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_bg"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_bg"
            android:paddingStart="16dp"
            android:layout_marginBottom="32dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LOG IN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="#FFC107"
            android:textColor="#1A3C5A"
            android:elevation="6dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textColor="#BDBDBD"/>

            <TextView
                android:id="@+id/tvSignupRedirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:padding="4dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
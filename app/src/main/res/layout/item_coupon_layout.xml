<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp"
app:cardCornerRadius="12dp"
app:cardElevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/coupon_bg"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME100"
            android:textColor="#28A745"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCouponDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Flat ₹100 OFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCouponMinOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Min Order: ₹500"
            android:textColor="#666"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnDeleteCoupon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_delete"
        app:tint="#DC3545" />
</LinearLayout>
</androidx.cardview.widget.CardView>
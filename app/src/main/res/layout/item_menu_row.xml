<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
app:cardCornerRadius="10dp" app:cardElevation="3dp"
    android:clickable="true"
android:focusable="true"
android:foreground="?android:attr/selectableItemBackground">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="100dp" android:padding="8dp"
    android:background="@color/card_background">

    <ImageView
        android:id="@+id/img_shop_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Shop Image"
        android:background="@drawable/round_shape_light_grey"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/add_a_photo" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textSize="17sp" android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Nescafe IIT ISM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_shop_photo"
        app:layout_constraintEnd_toStartOf="@id/tv_shop_status"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tv_shop_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        tools:text="Best coffee and quick bites on campus."
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
        app:layout_constraintStart_toEndOf="@id/img_shop_photo"
        app:layout_constraintEnd_toStartOf="@id/tv_shop_status"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/star_fill"
        android:drawableTint="#FF9800"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="4.2"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_description"
        app:layout_constraintStart_toEndOf="@id/img_shop_photo" />

    <TextView
        android:id="@+id/tv_shop_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:background="@drawable/round_shape_green"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_rating_dummy"
        android:layout_marginBottom="4dp"
        tools:text="OPEN"/>

    <TextView
        android:id="@+id/tv_rating_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>